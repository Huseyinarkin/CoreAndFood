@model List<CoreAndFood.Models.Category>
@{
    Layout = "~/Views/Shared/_LayoutTest.cshtml";
}
<h2>Category List</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Category Name</th>
        <th>Delete</th>
        <th>Update</th>
    </tr>

    @foreach (var item in Model)
    {
<tr>
    <td>@item.CategoryID</td>
    <td>@item.CategoryName</td>
    <td>@item.Status</td>
    <td><a href="/Category/CategoryDelete/@item.CategoryID" class="btn btn-danger">Delete</a></td>
    <td><a href="/Category/CategoryGet/@item.CategoryID" class="btn btn-success">Update</a></td>
</tr>

    }
</table>
<a href="/Category/CategoryAdd/" class="btn btn-primary">New Category</a>
